    window.onload = () => {
      const saved = localStorage.getItem('paperify_logo');
      if (saved) { document.getElementById('logoPreviewImg').src = saved; document.getElementById('logoPreviewImg').style.display = 'block'; }
      buildPools();
    };
  </script>
